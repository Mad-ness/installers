! Configuration File for keepalived

global_defs {
   notification_email {
     root@localhost
   }

   notification_email_from ipfailover@openshift.local
   smtp_server 127.0.0.1
   smtp_connect_timeout 30
   router_id ipfailover
}

vrrp_script chk_ipfailover {
   script "/bin/bash -c '</dev/tcp/10.189.132.54/443'"
   interval 2
}


vrrp_instance ipfailover_VIP_1 {
   interface eth0
   state MASTER
   virtual_router_id 1
   priority 201
   preempt 30

   authentication {
      auth_type PASS
      auth_pass ipfailover
   }

   track_script {
      chk_ipfailover
   }



   virtual_ipaddress {
    10.189.132.43 dev eth0
   }
}


vrrp_instance ipfailover_VIP_2 {
   interface eth0
   state MASTER
   virtual_router_id 2
   priority 55
