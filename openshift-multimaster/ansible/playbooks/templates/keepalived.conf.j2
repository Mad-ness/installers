vrrp_instance VI_1 {
{% if servers[0] == inventory_hostname %}
    state MASTER
{% else %}
    state BACKUP
{% endif %}

    virtual_router_id 51
    interface eth1
    advert_int 1
    unicast_peer {
{% for server in servers %}
        {{ hostvars[server].openshift_ip }}
{% endfor %}
    }
    authentication {
        auth_type PASS
        auth_pass VeryVerySecuryPassword
    }
    virtual_ipaddress {
        {{ openshift_master_cluter_ip }}
    }
}

